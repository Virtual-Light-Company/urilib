    <modelVersion>4.0.0</modelVersion>

    <groupId>vlc.com.au</groupId>
    <artifactId>urilib-core</artifactId>
    <version>3.0-SNAPSHOT</version>
    <description>Implementations of various protocol and content handlers</description>

    <parent>
